<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css">

<div class="container">
    <h1>Symfony</h1>
    <hr>

    {% if repos is defined and repos is not empty %}
        <div class="row">
            <div class="col-sm-12 text-right">Repositories ({{ repos|length }})</div>
        </div>

        {% for repo in repos %}
            <div class="row" style="padding: 20px 0;border-bottom: #DDD solid 1px;">
                <div class="col-sm-12"><h3 style="margin-top:0;"><a style="color: #0366d6;" href="{{ repo.html_url }}">{{ repo.name }}</a></h3></div>
                <div class="col-sm-12">[READ-ONLY] Subtree split of the Symfony Twig Bundle</div>
                <div class="col-sm-12" style="margin-top:10px;">
                <div class="row">
                    <div class="col-sm-1"><svg aria-label="star" class="octicon octicon-star" height="16" role="img" version="1.1" viewBox="0 0 14 16" width="14"><path fill-rule="evenodd" d="M14 6l-4.9-.64L7 1 4.9 5.36 0 6l3.6 3.26L2.67 14 7 11.67 11.33 14l-.93-4.74z"></path></svg> {{ repo.stargazers_count }}</div>
                    <div class="col-sm-1"><svg aria-label="fork" class="octicon octicon-repo-forked" height="16" role="img" version="1.1" viewBox="0 0 10 16" width="10"><path fill-rule="evenodd" d="M8 1a1.993 1.993 0 0 0-1 3.72V6L5 8 3 6V4.72A1.993 1.993 0 0 0 2 1a1.993 1.993 0 0 0-1 3.72V6.5l3 3v1.78A1.993 1.993 0 0 0 5 15a1.993 1.993 0 0 0 1-3.72V9.5l3-3V4.72A1.993 1.993 0 0 0 8 1zM2 4.2C1.34 4.2.8 3.65.8 3c0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2zm3 10c-.66 0-1.2-.55-1.2-1.2 0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2zm3-10c-.66 0-1.2-.55-1.2-1.2 0-.65.55-1.2 1.2-1.2.65 0 1.2.55 1.2 1.2 0 .65-.55 1.2-1.2 1.2z"></path></svg> {{ repo.forks_count }}</div>
                </div>
                </div>
            </div>
        {% endfor %}

    {% else %}
        <div class="row">
            <div class="col-sm-12">No Repository found!</div>
        </div>
    {% endif %}

</div>